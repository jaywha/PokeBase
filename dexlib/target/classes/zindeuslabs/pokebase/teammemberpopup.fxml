<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="zindeuslabs.pokebase.Controllers.TeamMemberPopupController">
    <children>
      <TabPane prefHeight="200.0" prefWidth="200.0" stylesheets="@css/teammemberpopup.css" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Info">
               <content>
                  <VBox>
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label fx:id="lblDexNumber" text="Dex Number:" />
                                    <TextField fx:id="txtDexNumber" />
                                 </children>
                              </HBox>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label fx:id="lblName" text="Name:" />
                                    <TextField fx:id="txtName" />
                                 </children>
                              </HBox>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label fx:id="lblType" text="Type:" />
                                    <TextField fx:id="txtType" />
                                 </children>
                              </HBox>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label fx:id="lblTrainer" text="Trainer:" />
                                    <TextField fx:id="txtTrainer" />
                                 </children>
                              </HBox>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label fx:id="lblIDNumber" text="ID Number:" />
                                    <TextField fx:id="txtIDNumber" />
                                 </children>
                              </HBox>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label fx:id="lblHeldItem" text="Held Item:" />
                                    <TextField fx:id="txtHeldItem" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
          </Tab>
          <Tab text="Stats">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Moves">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
        </tabs>
      </TabPane>
      <TitledPane animated="false" text="Trainer Memo">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <TextArea prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
        </content>
      </TitledPane>
        <Button fx:id="btnSubmit" onAction="#submitPopup" text="Submit" />
    </children>
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="25.0" />
    </padding>
</VBox>
